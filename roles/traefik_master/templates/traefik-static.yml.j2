log:
  level: INFO
accessLog:
  filePath: "/var/log/accesslog.log"
  filters:
    statusCodes:
      - "400-499"
      - "500-599"
api:
  dashboard: true

providers:
  file:
    directory: /etc/traefik/conf
    watch: true
  docker:
    endpoint: "tcp://dockerproxy_traefik:2375"
    exposedByDefault: false

entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: "websecure"
          scheme: https
          permanent: true
  websecure:
    address: ":443"
    http:
      tls:
        # options: supersec
        certresolver: "cloudflare"
        domains:
          - main: "*.{{ traefik_master_main_domain }}"
            sans:
              - "{{ traefik_master_main_domain }}"

certificatesResolvers:
  cloudflare:
    acme:
      email: "{{ cloudflare_email }}"
      storage: /etc/traefik/acme/acme.json
      # caserver: "https://acme-staging-v02.api.letsencrypt.org/directory"
      dnsChallenge:
        provider: cloudflare
        delayBeforeCheck: 3
        resolvers:
          - "1.1.1.1:53"
          - "1.0.0.1:53"
